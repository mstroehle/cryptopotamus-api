{
  "name": "cryptopotamus-api",
  "version": "1.0.0",
  "description": "API for cryptopotamus",
  "scripts": {
    "start": "yarn run --prod build && yarn run --prod watch",
    "build": "yarn run build-ts",
    "serve": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve\"",
    "test": "mocha --watch --check-leaks --reporter spec -r ts-node/register test/**/*.spec.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect=0.0.0.0:9229 dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\""
  },
  "dependencies": {
    "@tsed/common": "^4.0.4",
    "@tsed/core": "^4.0.4",
    "@tsed/swagger": "^4.4.1",
    "@tsed/testing": "^4.4.1",
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "crypto": "^1.0.1",
    "dotenv": "^5.0.1",
    "express": "4",
    "method-override": "^2.3.10",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-streamlabs": "^1.0.3",
    "passport-twitch": "^1.0.3",
    "pg-promise": "^8.4.2",
    "qs": "^6.5.2",
    "serve-static": "^1.13.1",
    "swagger-ui-express": "^2.0.15",
    "ts-express-decorators": "^4.0.4",
    "ts-json-properties": "1.2.0",
    "tslint-eslint-rules": "^5.1.0",
    "uuid": "^3.2.1",
    "web3": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/compression": "^0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/http-proxy": "^1.12.4",
    "@types/method-override": "^0.0.31",
    "@types/mocha": "^2.2.48",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.6",
    "@types/passport": "^0.4.5",
    "@types/request-promise": "^4.1.41",
    "@types/sinon": "^4.1.3",
    "@types/sinon-chai": "^2.7.29",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^3.5.1",
    "copyfiles": "^2.0.0",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.12",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.2.2",
    "sinon-chai": "^2.14.0",
    "supertest": "^3.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
