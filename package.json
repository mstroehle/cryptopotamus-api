{
  "name": "eth-streamlabs",
  "version": "1.0.0",
  "description": "Ethereum widget backend for streamlabs",
  "scripts": {
    "start": "yarn run build && yarn run watch",
    "build": "yarn run build-ts && yarn run copy-static-assets",
    "serve": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve\" \"yarn run copy-static-assets-watch\"",
    "test": "mocha --watch --check-leaks --reporter spec -r ts-node/register test/**/*.spec.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "copy-static-assets": "copyfiles -u 1 'src/**/*.json' 'src/**/*.sql' 'dist/'",
    "copy-static-assets-watch": "copyfiles -w -u 1 'src/**/*.json' 'src/**/*.sql' 'dist/'",
    "debug": "yarn run build && yarn copy-static-assets-watch && yarn run watch-debug",
    "serve-debug": "nodemon --inspect=0.0.0.0:9229 dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\""
  },
  "dependencies": {
    "@tsed/common": "^4.4.1",
    "@tsed/core": "^4.4.1",
    "@tsed/swagger": "^4.4.1",
    "@tsed/testing": "^4.4.1",
    "@types/swagger-schema-official": "^2.0.9",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "concurrently": "^3.5.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "method-override": "^2.3.10",
    "serve-static": "^1.13.1",
    "swagger-ui-express": "^2.0.15",
    "ts-json-properties": "1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/express": "^4.11.1",
    "@types/http-proxy": "^1.12.4",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.6",
    "@types/request-promise": "^4.1.41",
    "@types/sinon": "^4.1.3",
    "@types/sinon-chai": "^2.7.29",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.12",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.2.2",
    "sinon-chai": "^2.14.0",
    "supertest": "^3.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
